{
  "name": "notex",
  "description": "NoteX Applicaton",
  "version": "0.1.1",
  "private": true,
  "author": "Cüneyd Bölükoğlu",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "lint": "next lint",
    "electron:dev": "concurrently -k \"NODE_ENV=development node server.js\" \"wait-on http://localhost:3000 && NODE_ENV=development electron .\"",
    "electron:build:mac": "npm run build && electron-builder --mac"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@mui/material": "^6.4.3",
    "@tiptap/extension-blockquote": "^2.26.1",
    "@tiptap/extension-bullet-list": "^2.26.1",
    "@tiptap/extension-heading": "^2.26.1",
    "@tiptap/extension-image": "^2.26.1",
    "@tiptap/extension-link": "^2.26.1",
    "@tiptap/extension-ordered-list": "^2.26.1",
    "@tiptap/extension-table": "^2.26.1",
    "@tiptap/extension-table-cell": "^2.26.1",
    "@tiptap/extension-table-header": "^2.26.1",
    "@tiptap/extension-table-row": "^2.26.1",
    "@tiptap/extension-text-align": "^2.26.1",
    "@tiptap/extension-underline": "^2.25.1",
    "@tiptap/pm": "^2.26.1",
    "@tiptap/react": "^2.26.1",
    "@tiptap/starter-kit": "^2.26.1",
    "axios": "^1.8.2",
    "express": "^5.1.0",
    "formik": "^2.4.6",
    "lucide-react": "^0.525.0",
    "next": "15.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "yup": "^1.6.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "concurrently": "^9.2.1",
    "electron": "^37.2.6",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "15.1.6",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.notex.app",
    "productName": "NoteX",
    "asar": true,
    "files": [
      "server.js",
      "electron/**/*",
      ".next/**/*",
      "public/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity",
      "identity": null
    }
  }
}
